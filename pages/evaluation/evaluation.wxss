/* pages/evaluation/evaluation.wxss */
page {
  height: 100%;
  background: #f2f2f2;
}

.container {
  box-sizing: border-box;
  background: #fff;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  background:#fff;
  z-index: 2;
}

.title-bar {
  display: flex;
  align-items: center;
  
opacity: 1;
font-size: 36rpx;
font-family: PingFangSC;
font-weight: 500;
color: rgba(51,51,51,1);
letter-spacing: 0px;
}
.title-bar>text {
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;
}

.introTitle {
  height: 87rpx;
  width: 100%;
}

.introTitle>view>text:nth-child(1) {
  width: 8rpx;
  height: 25rpx;
  background: #2b77ef;
  float: left;
  margin: 34rpx 10rpx 0 32rpx;
}
.introTitle>view>text:nth-child(2) {
  height: 45rpx;
  opacity: 1;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
  letter-spacing: 0rpx;
  margin-top: 24rpx;
  float: left;
}
.introTitle>view>text:nth-child(3) {
  float: right;
  height: 45rpx;
  opacity: 1;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(102,102,102,1);
  line-height: 45rpx;
  letter-spacing: 0rpx;
  margin-top: 24rpx;
  margin-right: 32rpx;
}
