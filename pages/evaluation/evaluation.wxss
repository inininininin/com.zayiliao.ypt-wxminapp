/* pages/evaluation/evaluation.wxss */
page {
  height: 100%;
  background: #f2f2f2;
}

.container {
  box-sizing: border-box;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  z-index: 2;
}

.title-bar {
  display: flex;
  align-items: center;

  opacity: 1;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 0px;
}

.title-bar>text {
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;
}

.introTitle {
  height: 87rpx;
  width: 100%;
}

.introTitle>view>text:nth-child(1) {
  width: 8rpx;
  height: 25rpx;
  background: #2b77ef;
  float: left;
  margin: 34rpx 10rpx 0 32rpx;
}

.introTitle>view>text:nth-child(2) {
  height: 45rpx;
  opacity: 1;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
  letter-spacing: 0rpx;
  margin-top: 24rpx;
  float: left;
}

.introTitle>view>text:nth-child(3) {
  float: right;
  height: 45rpx;
  opacity: 1;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 45rpx;
  letter-spacing: 0rpx;
  margin-top: 24rpx;
  margin-right: 32rpx;
}

.evaitem {
  width: 702rpx;
  /* height: 192rpx; */
  height: auto;
  opacity: 1;
  background: rgba(255, 255, 255, 1);
  margin: 0 24rpx 20rpx 24rpx;
  padding-bottom: 10rpx;
  border-radius: 4rpx;
}

.evaitem>view:nth-child(1) {
  width: 100%;
  height: 72rpx;
  border-bottom: 1rpx solid #e2e2e2;
  line-height: 72rpx;
}

.evaitem>view:nth-child(1)>image {
  width: 32rpx;
  height: 32rpx;
  margin: 20rpx 10rpx 20rpx 30rpx;
  float: left;
}

.evaitem>view:nth-child(1)>text:nth-child(2) {
  max-width: 250rpx;
  float: left;
  opacity: 1;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 72rpx;
  letter-spacing: 0.1rpx;
}

.evaitem>view:nth-child(1)>text:last-child {
  opacity: 1;
  float: right;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 72rpx;
  margin-right: 30rpx;
  letter-spacing: 0px;
}

.evaitem>view:nth-child(1)>view {
  display: inline-block;
  height: 72rpx;
  line-height: 72rpx;
  margin-left: 20rpx;
}

.evaitem>view:nth-child(1)>view image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin: 0 10rpx 0 0;
}

.evaitem>view:nth-child(2) {
  margin: 23rpx 30rpx;
  width: 642rpx;
  /* height: 74rpx; */
  height: auto;

  opacity: 1;
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 37rpx;
  letter-spacing: 0rpx;
  word-break: break-all;
  word-wrap: break-word
}

.imageBox {
  width: 642rpx;
  margin: 0 30rpx;
  height: auto;
}

.imageBox>image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}

.withoutLogin {
  width: 100%;
  height: auto;
  text-align: center;
}

.withoutLogin text {
  width: 100%;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #666666;
  line-height: 48rpx;
  letter-spacing: 1rpx;
  margin-top: 400rpx;
  display: block;
}

.withoutLogin view {
  width: 310rpx;
  margin: 30rpx 220rpx;
  height: 70rpx;
  font-size: 34rpx;
  line-height: 70rpx;
  color: #fff;
  text-align: center;
  background: #ff932e;
  border-radius: 35rpx;
}