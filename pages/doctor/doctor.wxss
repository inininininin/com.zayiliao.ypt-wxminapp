/* pages/doctor/doctor.wxss */
page {
  height: 100%;
  background: #fff;
}

.container {
  box-sizing: border-box;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  z-index: 2;
  box-shadow: 0px 1px 4px 0px rgba(0,0,0,0.1);
}

.title-bar {
  display: flex;
  align-items: center;
}

.title-bar>view {
  height: 60rpx;
  width: 460rpx;
  background: #fff;
  border-radius: 30rpx;
  float: left;
  line-height: 60rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.back {
  width: 18rpx;
  height: 30rpx;
  display: inline-block;
  padding: 20rpx;
  margin-left: 12rpx;
}

.evahospital {
  width: 610rpx;
  text-align: center;
  opacity: 1;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 0rpx;
}
.listItem{
  height: 215rpx;
  width: 718rpx;
  margin-left: 32rpx;
  border-bottom: 1rpx solid #e2e2e2;
}
.listItem>image{
  width: 130rpx;
height: 130rpx;
opacity: 1; 
margin: 38rpx 31rpx 47rpx 0;
float: left;
}
.listItem>view{
  width: 525rpx;
  height: 155rpx;
  display: inline-block;
  margin-top: 30rpx;
}
.listItem>view>text:nth-child(1){
  height: 48rpx;
  opacity: 1;
  font-size: 34rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51,51,51,1);
  line-height: 48rpx;
  letter-spacing: 0rpx;
  float: left;
  }
  .listItem>view>text:nth-child(2){
    height: 48rpx;
    line-height: 48rpx;
    /* display: inline-block; */
    width: 420rpx;
    margin-left: 10rpx;
    font-size: 24rpx;
    letter-spacing: 0px;
    float: left;
  }
  .listItem>view>text:nth-child(3){
  height: 99rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153,153,153,1);
  line-height: 33rpx;
  letter-spacing: 0rpx;
  clear: both;
  }
