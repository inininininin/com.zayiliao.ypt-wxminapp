		<image mode="aspectFill" src="../icon/sousuoAll.png"></image><text>历史搜索</text>
	</view>
  <view class="userItem">
		<text class="lineOne" bindtap="searchKeyHos" data-kw='{{item}}' wx:for='{{searchKeysThis}}'>{{item}}</text>
