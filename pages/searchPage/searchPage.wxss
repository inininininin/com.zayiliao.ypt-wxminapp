/* pages/searchPage/searchPage.wxss */
page {
  height: 100%;
  background: #fff;
}

.container {
  box-sizing: border-box;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  z-index: 2;
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.1);
}

.title-bar {
  display: flex;
  align-items: center;
}

.title-bar>view {
  height: 60rpx;
  width: 460rpx;
  /* background: #fff; */
  border-radius: 30rpx;
  float: left;
  line-height: 60rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.back {
  width: 18rpx;
  height: 30rpx;
  display: inline-block;
  padding: 20rpx;
  margin-left: 12rpx;
  margin-right: 4rpx;
}

.evahospital {
  width: 610rpx;
  text-align: center;
  opacity: 1;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 0rpx;
}

.searchBox {
  width: 640rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.searchBox image {
  width: 26rpx;
  height: 29rpx;
  margin-left: 20rpx;
  margin-top: 16rpx;
  float: left;
}

.searchBox>input {
  width: 385rpx;
  height: 60rpx;
  display: inline-block;
  float: left;
  margin-left: 12rpx;
  padding-right: 10rpx;
}

.searchBox>view {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  background: #ed2828;
  color: #fff;
  border-radius: 0rpx 30rpx 30rpx 0rpx;
  text-align: center;
  float: left;
}
/* 历史搜索 */
.hotSearch{
  width: 750rpx;
  height: auto;
}
.doctorTitle{
  height: 78rpx;
  line-height: 78rpx;
}
.doctorTitle image {
  width: 24rpx;
  height: 26rpx;
  margin: 0 10rpx 0 22rpx;
  vertical-align: middle;
}

.doctorTitle text {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #888888;
  line-height: 33rpx;
  letter-spacing: 0rpx;
}
.userItem {
  width: 100%;
  background: #fff;
  clear: both;
  float: left;
  /* padding-bottom: 24rpx; */
}

.userItem>text {
  padding: 0 10rpx;
  width: 186rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #ffffff;
  border: 1rpx solid #e2e2e2;
  border-radius: 6rpx;
  text-align: center;
  margin-bottom: 24rpx;
  margin-left: 30rpx;
  float: left;
  
  /* display: inline-block; */
}

.userItem>text:nth-child(3n+1) {
  margin-left: 36rpx !important;
}
