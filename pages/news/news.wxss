/* pages/news/news.wxss */
@import '../../app.wxss';
page {
  height: 100%;
  background: #f2f2f2;
}

.container {
  box-sizing: border-box;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  z-index: 2;
}

.title-bar {
  display: flex;
  align-items: center;
  opacity: 1;
  font-size: 38rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 0px;
}

.title-bar>text:nth-child(1) {
  width: 170rpx;
  opacity: 1;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(43, 119, 239, 1);
  letter-spacing: 0rpx;
  margin-left: 32rpx;
}

.title-bar>text:nth-child(2) {
  display: block;
  width: 346rpx;
  height: 100%;
  font-size: 36rpx;
  text-align: center;
}

.newsItem {
  width: 702rpx;
  height: 190rpx;
  opacity: 1;
  background: rgba(255, 255, 255, 1);
  margin: 20rpx 24rpx;
  border-radius: 4rpx;
  position: relative;
}

.newsItem>view:nth-child(1) {
  display: inline-block;
  height: 48rpx;
  opacity: 1;
  font-size: 34rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  letter-spacing: 0rpx;
  margin: 24rpx 30rpx 5rpx 30rpx;
}

.newsItem>view:nth-child(2) {
  height: 42rpx;
  opacity: 1;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 42rpx;
  letter-spacing: 0rpx;
  margin: 0 30rpx 5rpx 30rpx;
}

.newsItem>view:nth-child(3) {
  height: 42rpx;
  opacity: 1;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  letter-spacing: 0rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.newsItem>text{
  position: absolute;
  width: 16rpx;
height: 16rpx;
opacity: 1;
background: rgba(255,26,46,1);
right: 20rpx;
top: 20rpx;
border-radius: 8rpx;
}
.bgColor{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
}
.bgColor>view{
  width: 540rpx;
  height: 770rpx;
  background:#fff;
  margin: 234rpx 105rpx 0;
  border-radius: 15rpx;
}
.bgColor .bgTitle{
  width: 100%;
  height:84rpx ;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  line-height: 84rpx;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.bgColor .bgTitle text{
  display: inline-block;
  width: 380rpx;
  margin: 0 0 0 80rpx;
  float: left;
}
.bgColor .bgTitle image{
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  /* margin: 32rpx 30rpx 32rpx 0; */
  padding: 32rpx 30rpx;
  float: right;
}
.bgColor .bgContent{
  width: 472rpx;
  margin: 0 34rpx;
}
.bgColor .bgContent>text{
  width: 100%;
height: 79rpx;
font-size: 24rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: justify;
color: #999999;
line-height: 79rpx;
letter-spacing: 0px;
}
.bgColor .bgContent view{
  width: 472rpx;
max-height: 500rpx;
overflow-y: scroll;
font-size: 26rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: justify;
color: #333333;
line-height: 37rpx;
letter-spacing: 0pt;
word-break:break-all;word-wrap:break-word
}