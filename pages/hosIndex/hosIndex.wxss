/* pages/hosIndex/hosIndex.wxss */
page {
  height: 100%;
  background: #fff;
}

.container {
  box-sizing: border-box;
 /* background:url(https://test.zaylt.njshangka.com/oss/static/20200106121239682168432372632991.png) no-repeat;background-size:cover;background-position: center; */
  height:518rpx;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  /* background: #2b77ef; */
  z-index: 2;
}

.title-bar {
  display: flex;
  align-items: center;
}

.title-bar>view {
  height: 60rpx;
  width: 460rpx;
  background: #fff;
  border-radius: 30rpx;
  float: left;
  line-height: 60rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.back {
  width: 18rpx;
  height: 30rpx;
  display: inline-block;
  padding: 20rpx;
  margin-left: 12rpx;
}
.evahospital{
  position: absolute;
  width: 686rpx;
height: 80rpx;
opacity: 1;
background: rgba(255,255,255,1);
border-radius: 8rpx;
left:32rpx;
bottom: 20rpx;
font-size: 34rpx;
font-family: PingFangSC;
font-weight: 400;
text-align: center;
color: rgba(43,119,239,1);
line-height: 80rpx;
letter-spacing: 0.55px;
}
.detail{
  width: 686rpx;
  padding: 0 32rpx;
}
.detail>text{
height: 36rpx;
opacity: 1;
font-size: 36rpx;
font-family: PingFangSC;
font-weight: 500;
color: rgba(51,51,51,1);
line-height: 36rpx;
letter-spacing: 0px;
margin: 30rpx 0;
display: block;
}
.detail .line{
  display: block;
  width: 686rpx;
  /* height: 36rpx; */
  opacity: 1;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(251, 215, 101, 1);
  line-height: 36rpx;
}
.detail .line text {
  height: 42rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51,51,51,1);
  line-height: 42rpx;
  letter-spacing: 0px;
  padding: 0 18rpx;
  margin: 0 12rpx 0 0;
  border-radius: 21rpx;
  border: 1rpx solid #fff;
}
.detail .intro{
  width: 686rpx;
/* height: 1280rpx; */
opacity: 1;
font-size: 28rpx;
font-family: PingFangSC;
font-weight: 400;
color: rgba(51,51,51,1);
line-height: 40rpx;
letter-spacing: 0px;
margin-bottom: 88rpx;
}

.actor{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 180rpx;
  left: 315rpx;
  z-index: 3;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
}
.actor image{
  width: 120rpx;
  height: 120rpx;
  /* margin: 25rpx; */
}